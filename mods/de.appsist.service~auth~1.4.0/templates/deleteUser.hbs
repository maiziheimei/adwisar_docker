{{!-- Expects: basePath : String, user : Object --}}
<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>APPsist User Profiles</title>
<link rel="stylesheet" type="text/css" href="{{{basePath}}}/css/style.css">
</head>
<body>
<form action="{{basePath}}/admin/deleteUser" method="POST">
<input type="hidden" name="id" value="{{user.id}}">
<div class="header">
  Confirm User Deletion
</div>
<div class="panel">
  <p>Are you sure you want to delete this user?</p>

  <div class="field">
    <label>ID</label>
    <div class="info">{{user.id}}</div>
  </div>
  <div class="field">
    <label>Display name</label>
    <div class="info">{{user.displayName}}</div>
  </div>
</div>

<div class="buttonBar">
	<input type="button" onclick="window.location.assign('{{basePath}}/admin/listUsers')" value="Cancel">
	<input type="submit" value="Delete">
</div>
</form>
</body>
</html>
