{{!-- Expects: basePath : String, user : Object --}}
<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>APPsist User Profiles</title>
<link rel="stylesheet" type="text/css" href="{{{basePath}}}/css/style.css">
</head>
<body>
<form action="{{basePath}}/admin/addUser" method="POST">
  <div class="header">
    Create a New User
  </div>
  {{#if error}}<div class="errorMessage">{{error}}</div>{{/if}}

  <div class="panel">
    <div class="field">
      <label for="firstName">First name*</label>
    	<input name="firstName" type="text" value="{{user.firstName}}" required>
  	</div>

  	<div class="field">
    	<label for="lastName">Last name*</label>
    	<input name="lastName" type="text" value="{{user.lastName}}" required>
  	</div>

  	<div class="field">
    	<label for="displayName">Display name*</label>
    	<input name="displayName" type="text" value="{{user.displayName}}" required>
  	</div>

  	<div class="field">
    	<label for="mail">Email address*</label>
    	<input name="mail" type="text" value="{{user.mail}}" required>
  	</div>

  	<div class="field">
    	<label for="position">Position</label>
    	<input name="position" type="text" value="{{user.position}}">
  	</div>

  	<div class="field">
    	<label for="password">Password*</label>
    	<input name="password" type="password" value="" required>
  	</div>

  	<div class="field">
    	<label for="pin">PIN*</label>
    	<input name="pin" type="password" value="" required>
  	</div>

  	<div class="field">
    	<label for="resources">Authorized resources</label>
    	<input name="resources"	type="text"	value="{{user.resources}}">
  	</div>
	<div>

	<div class="buttonBar">
		<input type="button" onclick="window.location.assign('{{basePath}}/admin/listUsers')" value="Cancel">
		<input type="submit" value="Save">
	</div>
</form>
<p>* required</p>
</body>
</html>
